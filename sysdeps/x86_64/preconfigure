case "$base_machine" in
x86_64)
  case "$CC $CFLAGS $CPPFLAGS " in
  *" -mx32"*)
    machine=x86_64/x32
    libc_cv_slibdir="/lib32"
    if test "$libdir" = '${exec_prefix}/lib'; then
      libdir='${exec_prefix}/lib32';
      # Locale data can be shared.
      libc_cv_localedir='${exec_prefix}/lib/locale'
    fi
    ;;
  *)
    machine=x86_64/lp64
    ;;
  esac
esac
